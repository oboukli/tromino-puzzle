root = true

[*.{c,cpp,h}]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[configure.ac, Makefile.am]
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true
